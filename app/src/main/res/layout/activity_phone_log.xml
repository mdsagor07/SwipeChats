<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLogActivity">

    <EditText
        android:id="@+id/phone_num_input"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="plese input phone Number"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:drawableStart="@drawable/phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/Verification_code_input"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="plese input Verification"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:drawableStart="@drawable/vefifycode"
        android:layout_below="@+id/phone_num_input"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/sendVerification_code"
        android:text="Send verification Code"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/Verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/Verify_num"
            android:layout_below="@+id/sendVerification_code"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/colorPrimary"
            android:text="Verify"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


</RelativeLayout>