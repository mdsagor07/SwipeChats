<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/about_profileid"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/me"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>
        />

    <RelativeLayout
        android:id="@+id/nameEmailabout"
        android:layout_width="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/about_profileid"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/develop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="Developer Info:"
            android:textAllCaps="true"
            android:textColor="#17285F"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/email_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/develop"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="sagor.cse.just@gmail.com"
            android:textAlignment="center"
            android:textColor="#0404A7"
            android:textSize="17dp" />
        <TextView
            android:id="@+id/dept_about"
            android:layout_below="@+id/email_about"
            android:text="Dept. of Computer Science And Engineering"
            android:textSize="17dp"
            android:textColor="#0404A7"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>