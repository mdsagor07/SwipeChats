<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupMassageActivity">

    <include
        android:id="@+id/group_masege_app_bar"
        layout="@layout/app_bar_layout"

        >

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@id/group_masege_app_bar"
        android:layout_above="@+id/myliniear"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/group_massge_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="50dp"
                android:padding="2dp"
                android:textSize="20sp"

                />


        </LinearLayout>
    </ScrollView>

    <LinearLayout

        android:id="@+id/myliniear"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/usersendmassgeinput"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:hint="Please write your massage"/>

        <ImageButton
            android:id="@+id/usersendMassageButton"
            android:layout_margin="20dp"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/playbutton"/>

    </LinearLayout>
</RelativeLayout>